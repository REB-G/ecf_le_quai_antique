{% extends 'base.html.twig' %}

{% block title %}Le Quai Antique - Réservation{% endblock %}

{% block body %}
<h1>Formulaire de réservation.</h1>

<section class="js-reservation-submit">
{{ form_start(reservationForm) }}
    {{ form_row(reservationForm.name) }}
    {{ form_row(reservationForm.firstname) }}
    {{ form_row(reservationForm.email) }}
    {{ form_row(reservationForm.numberOfGuests) }}
    {{ form_row(reservationForm.allergy) }}
    {{ form_row(reservationForm.reservationDate) }}
    {{ form_row(reservationForm.reservationHour) }}

    <button type="submit" class="btn">Réserver</button>
{{ form_end(reservationForm) }}
</section>

{% endblock %}
